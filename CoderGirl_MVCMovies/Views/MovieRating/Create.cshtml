@model CoderGirl_MVCMovies.Models.MovieRating

@{
    ViewData["Title"] = "Rate Movie";
}

<h1>Rate a Movie</h1>
<form method='post'>

    <input type="text" asp-for="MovieName" name="Movie Name" value="@ViewBag.Name" readonly>
    
    <select asp-for="Rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <button type='submit'>Rate Movie</button>
</form>
