@model List<CoderGirl_MVCMovies.Models.MovieRating>
@{
    ViewData["Title"] = "Rate Movie";
}

<h1>View</h1>

<h1>Rate a Movie</h1>
<form method='post'>
    <select asp-for="MovieNames ">
        @foreach (var name in ViewBag.MovieName)
        {
            <option>@name</option>
        }
    </select>
    <select asp-for="rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <button type='submit'>Rate it</button>
</form>