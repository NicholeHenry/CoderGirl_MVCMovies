@model List<CoderGirl_MVCMovies.ViewModels.Movies.MovieListItemViewModel>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
<a asp-controller="Movie" asp-action="Create">Add New Movie</a>
<table>
    <tr>
        <th>Movie Name</th>
        <th>Director</th>
        <th>Year</th>
        <th>Average Rating</th>
        <th>Number of Ratings</th>
        
    </tr>
    @foreach (var movie in Model)
    {
    <tr id="@movie.Id">
        <td>@movie.Name</td>
        <td>@movie.DirectorName</td>
        <td>@movie.Year</td>

        <td>@movie.AverageRating</td>



        <td>@movie.NumberOfRatings</td>




        <td><a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a></td>
        <td><a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">Delete</a></td>
        
        <td>@Html.ActionLink("Rate", "Create", "MovieRating", new { movieId = movie.Id }) </td>
    </tr>
    }
</table>
